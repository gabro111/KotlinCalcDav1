<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView

        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button

            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#55abca"
            android:text="%"
            android:onClick="secondaryOperationClick"
            android:textSize="30sp">

        </Button>

        <Button
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#55abca"
            android:text="âˆš"
            android:onClick="secondaryOperationClick"
            android:textSize="30sp">

        </Button>

        <Button
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#55abca"
            android:text="+/-"
            android:onClick="secondaryOperationClick"
            android:textSize="30sp">

        </Button>

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/equalButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="1dp">

            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:background="#88FF02"
                android:text="7"
                android:textSize="30sp"
                >

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="8"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="9"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#36BCFF"
                android:text="*"
                android:onClick="operationClick"
                android:textSize="30sp">

            </Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="1dp">

            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="4"
                android:onClick="numberClick"
                android:textSize="30sp"
                >

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="5"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="6"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#d6075d"
                android:onClick="operationClick"
                android:text="-"
                android:textSize="30sp">

            </Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="1dp">

            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="1"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>

            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="2"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="3"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#36BCFF"
                android:onClick="operationClick"
                android:text="+"
                android:textSize="30sp">

            </Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="1dp"
            >

            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#0054ff"
                android:text="C"
                android:onClick="secondaryOperationClick"
                android:textSize="30sp"
                >

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#88FF02"
                android:text="0"
                android:onClick="numberClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#0054ff"
                android:text="."
                android:onClick="secondaryOperationClick"
                android:textSize="30sp">

            </Button>
            <Button
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#d6075d"
                android:onClick="operationClick"
                android:text="/"
                android:textSize="30sp">

            </Button>

        </TableRow>
    </TableLayout>

    <Button
        android:text="="
        android:layout_margin="0dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:id="@+id/equalButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:backgroundTint="#47dac5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>